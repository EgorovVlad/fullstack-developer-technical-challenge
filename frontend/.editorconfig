# http://editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8
max_line_length = 120

# 2 space indentation
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Match Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false
